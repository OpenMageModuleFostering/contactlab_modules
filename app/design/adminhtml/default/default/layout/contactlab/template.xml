<?xml version="1.0"?>
<layout version="0.1.0">
    <contactlab_template_adminhtml_types_index>
        <reference name="content">
            <block type="contactlab_template/adminhtml_type" name="contactlab_template_type" />
        </reference>
    </contactlab_template_adminhtml_types_index>
    <contactlab_template_adminhtml_types_grid>
        <reference name="content">
            <block type="contactlab_template/adminhtml_type_grid" name="contactlab_template_type_grid" output="toHtml"/>
        </reference>
    </contactlab_template_adminhtml_types_grid>
    <contactlab_template_adminhtml_types_edit>
        <update handle="editor"/>
        <reference name="content">
            <block type="contactlab_template/adminhtml_type_edit" name="contactlab_template_edit" template="contactlab/template/type/edit.phtml" />
        </reference>
    </contactlab_template_adminhtml_types_edit>
    <adminhtml_newsletter_template_edit>
        <reference name="content">
            <block type="contactlab_template/adminhtml_newsletter_template_edit_js" name="template_edit_js" template="contactlab/template/edit/js.phtml" after="-"/>
            <block type="contactlab_template/adminhtml_newsletter_template_edit_validation" name="template_edit_validation" template="contactlab/template/edit/validation.phtml" after="-"/>
        </reference>
    </adminhtml_newsletter_template_edit>
    <adminhtml_system_config_edit>
        <reference name="content">
            <block type="core/template" name="adminhtml_system_config_edit_validation_min_max" template="contactlab/template/edit/validation.phtml" after="-"/>
        </reference>
    </adminhtml_system_config_edit>
    <contactlab_commons_adminhtml_tasks_index>
        <reference name="content">
            <block type="adminhtml/template" name="contactlab.template" after="contactlab.commons.uk"
                   template="contactlab/template/tasks/buttons.phtml">
                <block type="contactlab_template/adminhtml_widget_button_queue"
                       name="contactlab.template.queue"
                       as="contactlab.template.queue">
                    <action method="setLabel" translate="label">
                        <label>Scan templates</label>
                    </action>
                    <action method="setUrl">
                        <url>contactlab_template/adminhtml_template/scan</url>
                    </action>
                </block>
                <block type="adminhtml/template"
                       name="contactlab.template.email"
                       template="contactlab/template/tasks/debugemail.phtml" />
            </block>
        </reference>
    </contactlab_commons_adminhtml_tasks_index>
</layout>
